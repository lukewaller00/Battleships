<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Hello
    </title>
</head>
<body>
    <%- include("partials/navbar.ejs",  {user: user }) -%>
    <div class="container-fluid justify-content-center" style="max-width: 50%">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
            <div class="card-body p-5">
                <h3 style="text-align: center;">Login</h3>
                <% if (messages.error) { %>
                    <%= messages.error %>
                  <% } %>  
                <form method="POST">
                    <div class="mb-3">
                    <label  class="form-label">Email Address</label>
                    <input name="email" type="email" id="email" class="form-control" placeholder="Email" aria-describedby="Enter Email Address" required>
                    <div class="invalid-feedback">Please Enter an Email</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input name="password" type="password" id="password" class="form-control" placeholder="Password" aria-describedby="Enter Password" required>
                        <div class="invalid-feedback">Please Enter a Password</div>
                    </div>
                    <button type="submit" class="btn btn-primary">Log In</button>
                </form> 
                <h4>Haven't got an account? Register Here:</h4>
                <a class="btn btn-primary" href="/registration" role="button">Registration</a>
            </div>
        </div>  
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>


</body>